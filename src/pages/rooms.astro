---
import Layout from '../layouts/Layout.astro';
import PhotoCarousel from '../components/PhotoCarousel.astro';
import { getPhotosInDir } from '../lib/photos';

const livingPhotos = getPhotosInDir('02_Living');
const bedroom1Photos = getPhotosInDir('05_Bedroom1', '05_Bedroom_Wa');
const bedroom2Photos = getPhotosInDir('06_Bedroom2', '06_Bedroom_West');
---

<Layout 
  title="Rooms & Spaces" 
  description="Explore the rooms at Nagomi Stay Osaka. A 60㎡ entire home with 2 bedrooms, 5 beds, and 1 bathroom."
>
  <div class="container page-content">
    <h1>Rooms & Spaces</h1>
    <p class="text-ja mb-xl">お部屋・スペースの紹介</p>
    
    <div class="room-summary mb-xl">
      <div class="summary-item">
        <strong>Property Type</strong><br/>Entire home
        <div class="text-ja">一軒家貸切</div>
      </div>
      <div class="summary-item">
        <strong>Capacity</strong><br/>Up to 5 guests
        <div class="text-ja">最大5名様</div>
      </div>
      <div class="summary-item">
        <strong>Size</strong><br/>60㎡
        <div class="text-ja">広さ60平米</div>
      </div>
      <div class="summary-item">
        <strong>Layout</strong><br/>2 bedrooms, 1 bathroom
        <div class="text-ja">2LDK、バスルーム1つ</div>
      </div>
      <div class="summary-item">
        <strong>Beds</strong><br/>5 beds total
        <div class="text-ja">ベッド合計5台</div>
      </div>
    </div>

    <section class="room-section">
      <PhotoCarousel 
        title="Living & Dining Room" 
        titleJa="リビング・ダイニング"
        descriptionEn="A relaxing space equipped with a projector for movie nights and a comfortable sofa. Connected to a full kitchen."
        descriptionJa="プロジェクターと快適なソファを備えたリラックススペース。フルキッチンとつながっています。"
        images={livingPhotos}
        altPrefix="Living Room"
      />
    </section>

    <section class="room-section">
      <PhotoCarousel 
        title="Bedroom 1" 
        titleJa="ベッドルーム 1"
        descriptionEn="Comfortable beds ensuring a good night's sleep after a long day of sightseeing."
        descriptionJa="観光の疲れを癒やす寝心地の良いベッドを配置しています。"
        images={bedroom1Photos}
        altPrefix="Bedroom 1"
      />
    </section>
    
    <section class="room-section">
      <PhotoCarousel 
        title="Bedroom 2" 
        titleJa="ベッドルーム 2"
        descriptionEn="A peaceful secondary bedroom, perfect for kids or extra guests."
        descriptionJa="お子様や追加ゲストに最適な、静かで落ち着く2つ目の寝室です。"
        images={bedroom2Photos}
        altPrefix="Bedroom 2"
      />
    </section>

  </div>
</Layout>

<style>
  .page-content {
    padding: var(--spacing-xl) var(--spacing-sm);
  }
  .mb-xl {
    margin-bottom: var(--spacing-xl);
  }
  .room-summary {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    background: var(--color-bg-alt);
    padding: var(--spacing-lg);
    border-radius: 8px;
  }
  .summary-item {
    flex: 1;
    min-width: 150px;
    margin-bottom: var(--spacing-sm);
  }
  .room-section {
    margin-bottom: var(--spacing-xl);
  }
</style>
