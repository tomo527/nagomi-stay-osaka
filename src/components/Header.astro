---
const links = [
  { href: '/', label: 'Home' },
  { href: '/rooms', label: 'Rooms' },
  { href: '/amenities', label: 'Amenities' },
  { href: '/access', label: 'Access' },
  { href: '/rules-faq', label: 'Rules & FAQ' },
  { href: '/facts', label: 'Facts', hidden: true } // Usually we don't put facts prominently in top nav unless requested
];
---

<header class="header">
  <div class="container header-container">
    <a href="/" class="logo">
      <strong>Nagomi Stay Osaka</strong>
    </a>
    <nav class="nav">
      <ul>
        {links.map((link) => (
          !link.hidden && (
            <li>
              <a href={link.href} class={Astro.url.pathname === link.href ? 'active' : ''}>
                {link.label}
              </a>
            </li>
          )
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    z-index: 100;
  }
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }
  .logo {
    font-size: 1.25rem;
    color: var(--color-brand);
  }
  .nav ul {
    list-style: none;
    display: flex;
    gap: var(--spacing-md);
  }
  .nav a {
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--color-text-main);
    transition: color 0.2s;
  }
  .nav a:hover, .nav a.active {
    color: var(--color-brand);
  }
  
  @media (max-width: 768px) {
    .nav {
      display: none; /* In a real app we'd build a hamburger menu, keeping simple for early version or wrap it */
    }
  }
</style>
